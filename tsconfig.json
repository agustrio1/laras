{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "outDir": "./dist",
        "sourceMap": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"]
    },
    "include": [
        "./src/**/*",
        "./laras.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}